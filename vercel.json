{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@sveltejs/adapter-vercel"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "/api/events/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "/api/notifications/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ]
} 